<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#19846A"
    tools:context=".UserProfileFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#19846A"
        >


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/dialogbg"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="-54dp">


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                android:layout_marginTop="30dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_round_remove_24"
                app:layout_constraintBottom_toTopOf="@+id/createText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />


            <TextView
                android:id="@+id/createText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:padding="8dp"
                android:text="Manage Order"
                android:textAlignment="viewStart"
                android:textColor="@color/gray_900"
                android:textSize="25dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView" />


            <TextView
                android:id="@+id/odrderIdHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/lighgrey"
                android:layout_marginStart="8dp"
                android:layout_marginTop="172dp"
                android:text="order id : "
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/customer_name_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textColor="@color/lighgrey"
                android:layout_marginTop="28dp"
                android:text="customer name : "
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/odrderIdHint" />

            <TextView
                android:id="@+id/mobileNoHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:textColor="@color/lighgrey"
                android:layout_marginTop="28dp"
                android:text="mobile no : "
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/customer_name_hint" />

            <TextView
                android:id="@+id/order_Id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:text="order_id"
                android:textColor="@color/lighgrey"
                app:layout_constraintBottom_toBottomOf="@+id/odrderIdHint"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.241"
                app:layout_constraintStart_toEndOf="@+id/odrderIdHint"
                app:layout_constraintTop_toTopOf="@+id/odrderIdHint"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/cust_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:text="cust_name"
                android:textColor="@color/lighgrey"
                android:textColorHint="@color/lighgrey"
                app:layout_constraintBottom_toBottomOf="@+id/customer_name_hint"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.2"
                app:layout_constraintStart_toEndOf="@+id/customer_name_hint"
                app:layout_constraintTop_toTopOf="@+id/customer_name_hint"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/mobile_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:text="mobile_no"
                android:textColor="@color/lighgrey"
                app:layout_constraintBottom_toBottomOf="@+id/mobileNoHint"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.241"
                app:layout_constraintStart_toEndOf="@+id/mobileNoHint"
                app:layout_constraintTop_toTopOf="@+id/mobileNoHint"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/address_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="32dp"
                android:textColor="@color/lighgrey"
                android:text="Address : "
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mobileNoHint" />

            <TextView
                android:id="@+id/addressView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="96dp"
                android:text="address"
                android:textColor="@color/lighgrey"
                app:layout_constraintBottom_toBottomOf="@+id/address_hint"
                app:layout_constraintStart_toEndOf="@+id/address_hint"
                app:layout_constraintTop_toTopOf="@+id/address_hint"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/landmarkView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="36dp"
                android:text="landmark : "
                android:textColor="@color/lighgrey"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/address_hint" />

            <TextView
                android:id="@+id/landmarkId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="88dp"
                android:text="landmark"
                android:textColor="@color/lighgrey"
                app:layout_constraintBottom_toBottomOf="@+id/landmarkView"
                app:layout_constraintStart_toEndOf="@+id/landmarkView"
                app:layout_constraintTop_toTopOf="@+id/landmarkView"
                app:layout_constraintVertical_bias="0.0" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/req_payment"
                style="@style/btnSolidRoundedSmallTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginStart="28dp"
                android:layout_marginBottom="144dp"
                android:ellipsize="end"
                android:gravity="center"
                android:paddingStart="5dp"
                android:paddingTop="5dp"
                android:paddingEnd="5dp"
                android:paddingBottom="5dp"
                android:singleLine="true"
                android:text="Request Payment"
                android:textAllCaps="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/mapView"
                style="@style/btnSolidRoundedSmallTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="144dp"
                android:ellipsize="end"
                android:gravity="center"
                android:paddingStart="5dp"
                android:paddingTop="5dp"
                android:paddingEnd="5dp"
                android:paddingBottom="5dp"
                android:singleLine="true"
                android:text="Show in Gmaps"
                android:textAllCaps="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.521"
                app:layout_constraintStart_toEndOf="@+id/req_payment"
                app:layout_constraintTop_toTopOf="@+id/req_payment" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>