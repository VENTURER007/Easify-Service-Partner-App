<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:strokeColor="#19846A"
        app:strokeWidth="1sp"
        android:outlineSpotShadowColor="@color/black"
        android:outlineAmbientShadowColor="@color/lighgrey"
        app:cardBackgroundColor="@color/cardview_light_background"
        app:cardCornerRadius="7dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="300dp">

            <TextView
                android:id="@+id/landmark_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginStart="10dp"
                android:layout_marginTop="50dp"
                android:gravity="center_horizontal"
                android:text="landmark : "
                android:textColor="@color/lighgrey"
                android:textSize="15sp"
                android:textStyle="normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/location_name_hint" />

            <TextView
                android:id="@+id/upi_id_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginStart="5dp"
                android:gravity="center_horizontal"
                android:text="landmark"
                android:textColor="@color/lighgrey"
                android:textSize="15sp"
                android:textStyle="normal"
                app:layout_constraintBottom_toBottomOf="@+id/landmark_hint"
                app:layout_constraintStart_toEndOf="@+id/landmark_hint"
                app:layout_constraintTop_toTopOf="@+id/landmark_hint" />

            <TextView
                android:id="@+id/order_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginStart="5dp"
                android:gravity="center_horizontal"
                android:text="Order_id"
                android:textColor="@color/lighgrey"
                android:textSize="15sp"
                android:textStyle="normal"
                app:layout_constraintBottom_toBottomOf="@+id/order_id_hint"
                app:layout_constraintStart_toEndOf="@+id/order_id_hint"
                app:layout_constraintTop_toTopOf="@+id/order_id_hint" />

            <TextView
                android:id="@+id/order_id_hint"
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:layout_gravity="left"
                android:layout_marginStart="8dp"
                android:layout_marginTop="48dp"
                android:gravity="center_horizontal"
                android:text="Order id : "
                android:textColor="@color/lighgrey"
                android:textSize="15sp"
                android:textStyle="normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/location_name_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:text="Address : "
                android:textColor="@color/lighgrey"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/serviceChargeHint" />

            <TextView
                android:id="@+id/location_name"
                android:layout_width="306dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginStart="5dp"
                android:layout_marginRight="10dp"
                android:gravity="start"
                android:text="Location"
                android:textColor="@color/lighgrey"
                android:textSize="15sp"

                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/location_name_hint"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/location_name_hint"
                app:layout_constraintTop_toTopOf="@+id/location_name_hint"
                app:layout_constraintVertical_bias="0.0" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/accept_btn"
                style="@style/btnSolidRoundedSmallTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:ellipsize="end"
                android:gravity="center"
                android:paddingStart="5dp"
                android:paddingTop="5dp"
                android:paddingEnd="5dp"
                android:paddingBottom="5dp"
                android:singleLine="true"
                android:text="Accept"
                android:textAllCaps="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/reject_btn"
                style="@style/btnSolidRoundedSmallTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:ellipsize="end"
                android:gravity="center"
                android:paddingStart="5dp"
                android:paddingTop="5dp"
                android:paddingEnd="5dp"
                android:paddingBottom="5dp"
                android:singleLine="true"
                android:text="Reject"
                android:textAllCaps="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/serviceNameHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:text="Service Name : "
                android:textColor="@color/lighgrey"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/order_id_hint" />

            <TextView
                android:id="@+id/servicenameViewrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="serviceNameView"
                android:textColor="@color/lighgrey"
                app:layout_constraintBottom_toBottomOf="@+id/serviceNameHint"
                app:layout_constraintStart_toEndOf="@+id/serviceNameHint"
                app:layout_constraintTop_toTopOf="@+id/serviceNameHint" />

            <TextView
                android:id="@+id/serviceChargeHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:text="Minimum Service Charge : "
                android:textColor="@color/lighgrey"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/serviceNameHint" />

            <TextView
                android:id="@+id/serviceChargeViewrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="serviceChargeView"
                android:textColor="@color/lighgrey"
                app:layout_constraintBottom_toBottomOf="@+id/serviceChargeHint"
                app:layout_constraintStart_toEndOf="@+id/serviceChargeHint"
                app:layout_constraintTop_toTopOf="@+id/serviceChargeHint" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>